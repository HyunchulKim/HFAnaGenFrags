--pileup_dasoption "--limit 0" \
-n 50000 --era Run2_HI \
--eventcontent RAWSIM --scenario HeavyIons \
--pileup HiMixGEN --datatier GEN-SIM --beamspot MatchHI \
--customise SLHCUpgradeSimulations/Configuration/postLS1Customs.customisePostLS1_HI \
--no_exec

